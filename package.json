{
  "name": "onetimesecret",
  "version": "0.23.0-rc0",
  "description": "",
  "type": "module",
  "scripts": {
    "build": "vite build --config vite.config.ts",
    "build:local": "vite build --config vite.config.local.ts",
    "config": "bundle exec bin/ots config",
    "config:validate": "bundle exec bin/ots validate",
    "config:generate_and_validate": "pnpm run schema:generate && bundle exec bin/ots validate",
    "clean": "rimraf public/web/dist",
    "dev": "vite --host",
    "dev:local": "vite --config vite.config.local.ts --host",
    "docker:build": "pnpm run schema:generate && docker build --build-arg=VERSION=$npm_package_version -t onetimesecret .",
    "docker:image:metadata:latest": "docker inspect $(docker images -q | head -n 1) | jq '.[0].Config.Labels'",
    "docker:run": "docker run --rm -it onetimesecret",
    "lint": "pnpm run lint:base --cache-location ./node_modules/.cache/eslint --cache 'src/**/*.{mjs,ts,d.ts,vue}' './*.{mjs,ts,js}'",
    "lint:base": "eslint --quiet",
    "lint:fix": "pnpm run lint:base --fix 'src/**/*.{mjs,ts,vue}' './*.{mjs,ts,d.ts,vue}'",
    "lint:quick": "pnpm run lint:base --cache-location ./node_modules/.cache/eslint --cache 'src/**/*.{mjs,ts}' './*.{mjs,ts,js}'",
    "lint:quick:fix": "pnpm run lint:base --fix 'src/**/*.{mjs,ts}' './*.{mjs,ts,d.ts,js}'",
    "lint:tests": "pnpm run lint:base 'tests/**/*.{mjs,ts,vue}'",
    "optimize": "vite optimize",
    "optimize:local": "vite optimize --config vite.config.local.ts",
    "oursync": "rsync -av --ignore-existing public/web/ /var/www/public/",
    "playwright": "playwright test",
    "playwright:update": "pnpm install --save-dev @playwright/test@latest && pnpm exec playwright install --with-deps",
    "podman:build": "pnpm run schema:generate && podman build --build-arg=VERSION=$npm_package_version -t onetimesecret .",
    "podman:image:metadata:latest": "podman inspect $(podman images -q | head -n 1) | jq '.[0].Config.Labels'",
    "podman:run": "podman run --rm -it onetimesecret",
    "preview": "vite preview",
    "preview:local": "vite preview --config vite.config.local.ts",
    "test:redis:clean": "REDIS_URL='redis://127.0.0.1:2121/0' ruby support/clean_redis.rb --all",
    "test:redis:start": "${REDIS_SERVER:-valkey-server}  --port 2121 --save \"\" --appendonly no --daemonize yes",
    "test:redis:start:fg": "${REDIS_SERVER:-valkey-server}  --port 2121 --save \"\" --appendonly no",
    "test:redis:stop": "${REDIS_CLI:-valkey-cli} -p 2121 shutdown",
    "test:redis:status": "${REDIS_CLI:-valkey-cli} -p 2121 ping",
    "redis": "${REDIS_CLI:-valkey-cli}",
    "redis:start": "${REDIS_SERVER:-valkey-server} --save \"\" --appendonly no --daemonize yes",
    "redis:start:fg": "${REDIS_SERVER:-valkey-server} --save \"\" --appendonly no",
    "redis:stop": "${REDIS_CLI:-valkey-cli} shutdown",
    "redis:status": "${REDIS_CLI:-valkey-cli} ping",
    "rubocop": "bundle exec rubocop --config .rubocop.yml --fail-level warning",
    "rubocop:version": "bundle exec rubocop --config .rubocop.yml --verbose_version",
    "rubocop:version:pnpm": "pnpm run rubocop:version",
    "rubocop:json": "pnpm --silent run rubocop --format json",
    "rubocop:autocorrect": "pnpm run rubocop --autocorrect",
    "rubocop:regenerate": "pnpm run rubocop --regenerate-todo",
    "rubocop:pretty": "pnpm --silent run rubocop | jq",
    "schema:generate": "tsx src/scripts/generate-json-schemas.ts",
    "schema:generate:openapi": "tsx src/scripts/generate-json-schemas.ts --openapi",
    "schema:generate:watch": "tsx src/scripts/generate-json-schemas.ts --watch",
    "test": "pnpm test:base run --printConsoleTrace",
    "test:base": "vitest",
    "test:chrome:inspect": "pnpm test:base --inspect-brk --no-file-parallelism",
    "test:coverage": "pnpm test:base run --coverage",
    "test:rspec": "bundle exec rspec --format documentation",
    "test:rspec:all": "pnpm test:rspec --pattern 'tests/unit/ruby/rspec/**/*_spec.rb'",
    "test:rspec:failures": "bundle exec rspec --format failures",
    "test:tryouts": "REDIS_URL='redis://127.0.0.1:2121/0' bundle exec try -vf ",
    "test:tryouts:all": "pnpm test:tryouts tests/unit/ruby/try/**/*_try.rb",
    "test:tryouts:clean": "pnpm redis:clean && pnpm test:tryouts ",
    "test:tryouts:clean:all": "pnpm redis:clean && pnpm test:tryouts:all",
    "test:watch": "pnpm test:base --ui --no-open",
    "test:watch:coverage": "pnpm test:base --coverage",
    "test:watch:ui": "pnpm test:base --ui --open",
    "type-check": "pnpm run type-check:base -p ./tsconfig.json",
    "type-check:tests": "pnpm run type-check:base -p ./tsconfig.tests.json",
    "type-check:base": "vue-tsc --noEmit",
    "type-check:parallel": "pnpm -r exec vue-tsc --build --noEmit",
    "type-check:watch": "pnpm run type-check:base --watch",
    "validate": "bundle exec bin/ots validate",
    "version:update": "bash scripts/update-version.sh"
  },
