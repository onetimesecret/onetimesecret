{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/tests/**/*.ts",
    "src/tests/**/*.vue",
    "src/tests/**/*.d.ts",
    "src/types/**/*.ts",
    "src/types/declarations/*.d.ts"
  ],
  "exclude": ["node_modules", "src/node_modules", "public/web/dist", "dist"]
}
