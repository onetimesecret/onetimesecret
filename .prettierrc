{
  "arrowParens": "always",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "jsxSingleQuote": false,
  "overrides": [
    {
      "files": "*.rb",
      "options": {
        "parser": "ruby",
        "printWidth": 80
      }
    },
    {
      "files": "*.sql",
      "options": { "parser": "sql-cst" }
    },
    {
      "files": "*.svg",
      "options": {
        "parser": "html",
        "plugins": []
      }
    },
    {
      "files": ["*.vue"],
      "options": {
        "parser": "vue",
        "vueIndentScriptAndStyle": true,
        "htmlWhitespaceSensitivity": "css",
        "printWidth": 100,
        "singleAttributePerLine": true
      }
    }
  ],
  "plugins": ["prettier-plugin-vue", "@prettier/plugin-ruby", "prettier-plugin-tailwindcss"],
  "vueIndentScriptAndStyle": true,
  "printWidth": 100,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "semi": true,
  "singleAttributePerLine": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "tailwindConfig": "./tailwind.config.ts",
  "tailwindFunctions": ["clsx", "cn"],
  "tailwindAttributes": ["class", ":class", "className", "ngClass"],
  "tailwindPreserveDuplicates": false
}
