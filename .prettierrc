{
  "arrayBrackets": "multiline",
  "arrowParens": "always",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "endOfLine": "lf",
  "functionParenthesis": "multiline",
  "htmlWhitespaceSensitivity": "strict",
  "jsxSingleQuote": false,
  "objectBraces": "multiline",
  "overrides": [
    {
      "files": "*.rb",
      "options": {
        "parser": "ruby",
        "rubyParser": "syntax_tree"
      }
    },
    {
      "files": "*.svg",
      "options": {
        "parser": "html",
        "htmlSelfClosing": true,
        "htmlWhitespaceSensitivity": "ignore",
        "voidTags": "always"
      }
    },
    {
      "files": ["*.vue"],
      "options": {
        "vueIndentScriptAndStyle": true,
        "htmlSelfClosing": true,
        "htmlWhitespaceSensitivity": "ignore",
        "voidElements": ["path", "circle", "rect", "polyline", "line", "polygon"]
      }
    }
  ],
  "plugins": ["prettier-plugin-vue", "@prettier/plugin-ruby"],
  "printWidth": 100,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "semi": true,
  "singleAttributePerLine": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "vueIndentScriptAndStyle": true,
  "htmlSelfClosing": true
}
